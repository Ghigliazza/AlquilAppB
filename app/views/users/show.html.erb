<div class="d-flex justify-content-center text-center">
  <div class="card" style="width:500px">
    <div class="card-header">
      <h1><b><i> Perfil de Usuario </b></i></h1>
    </div>
    <div class="card-body">
      <%= render @user %>
    </div>
    <div class="card-footer text-muted">
      <%= link_to "Editar" + (@user.id == current_user.id ? "Perfil" : "Usuario"), edit_user_path(@user), class: "btn btn-primary" %>
      <%= link_to "Ver Alquileres", rentals_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
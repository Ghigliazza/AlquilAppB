
<div style="margin-left:50px; margin-top:15px;">

<%= form_with(model: user) do |form| %>

      <%= render partial: 'users/errors_user', locals:{user: user} %> 

  <%# Para guardar la localizacion %>
  <script>
  navigator.geolocation.getCurrentPosition((pos) => {
    document.querySelector("#user_coords_x").value =
      `${pos.coords.longitude}`;
  });

  navigator.geolocation.getCurrentPosition((pos) => {
    document.querySelector("#user_coords_y").value =
      `${pos.coords.latitude}`;
  });
  </script>

  <%# Hidden fields %>
  <%= form.hidden_field :coords_y %>
  <%= form.hidden_field :coords_x %>

  <div>
    <p><b><%= form.label "E-mail", style: "display: block"%></b>
    <%= form.text_field :email, :required => true, placeholder: "ejemplo@gmail.com" %></p>
  </div>

  <div class="field">
    <p><b><%= form.label "Contraseña" %><br /></b>
    <%= form.password_field :password, :required => true%></p>
  </div>
 
  <div class="field">
    <p><b><%= form.label "Confirmar contraseña" %><br /></b>
    <%= form.password_field :password_confirmation, :required => true%></p>
  </div>

  <div>
    <p><b><% form.label :rol, style: "display: block" %></b>
    <% form.number_field :rol %></p>
  </div>

  <div>
    <%#= form.label :name, style: "display: block" %>
    <p><b><%= form.label "Nombre", style: "display: block" %></b>
    <%= form.text_field :name , placeholder: "Nombre", :required => true %></p>
  </div>

  <div>
    <p><b><%= form.label "Apellido", style: "display: block" %></b>
    <%= form.text_field :lastName , placeholder: "Apellido", :required => true %></p>
  </div>

  <div>
    <p><b><%= form.label "Documento", style: "display: block" %></b>
    <%= form.number_field :document, :required => true , placeholder: "12345678" %></p>
  </div>

  <div>
    <p><b><%= form.label "Fecha de nacimiento", style: "display: block" %></b>
    <%= form.date_field :birthdate, :required => true%></p>
  </div>

  <div>
    <% form.label :state, style: "display: block" %>
    <% form.number_field :state %>
  </div>

  <div>
    <% form.label :license_url, style: "display: block" %>
    <% form.text_field :license_url %>
  </div>

  <div>
    <% form.label :license_photo, style: "display: block" %>
    <% form.file_field :license_photo %>
  </div>



  <div>


    <p></p>
    <% if logged_in? %>
      <%= form.button "Actualizar Datos" , type: "submit", :class=> "btn btn-primary"%>
    <% else %>
      <%= form.button "Crear Cuenta" , type: "submit", :class=> "btn btn-primary"%>
    <% end %>

    <%#= form.submit %>

  </div>
<% end %>

</div>  
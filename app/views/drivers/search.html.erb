
        <%#> https://getbootstrap.com/docs/5.0/components/accordion/ <%>
        <div class="accordion accordion-flush" id="accordionLista" >
          <% if @driverList.any? %> 

			<div style="margin-left:30px; margin-top:15px;">
				<h1><i><b>Resultados de búsqueda:</b> <%= params[:q] %> </i></h1>
			</div>

            <div style="margin-left:30px; margin-top:15px;">
              <table>
                <tbody> <tr> <td>               
                        <form class="form-inline my-2 my-lg-0" action="/drivers/search">
                          <input class="form-control mr-sm-2" name="q" type="text" placeholder="Email, nombre, apellido, DNI", aria-label="Buscar">
                          <input type="hidden" name="sort_param" value="<%= params[:sort_param] %>">
                          <button class="btn btn-info" type="submit"> Buscar </button>          
                        </form> 
                  </td> <td>                
                      <% if current_user.admin? %>
                          <% if params[:sort_param] == "descendente" %>     
                                <form action="">
                                	  <input type="hidden" name="q" value="<%= params[:q] %>">
                                    <input type="hidden" name="sort_param" value="ascendente"> &nbsp;    
                                    <button class="btn btn-success" type="submit"> Mayor Balance &#8681; </button> 
                                </form>
                          <% else %>
                                <form action="">
                                	  <input type="hidden" name="q" value="<%= params[:q] %>">
                                    <input type="hidden" name="sort_param" value="descendente"> &nbsp;     
                                    <button class="btn btn-danger" type="submit"> Menor Balance &#8679; </button>
                                </form>
                          <% end %> 
                      <% end %> 
                </td> </tr> </tbody>                               
              </table>
            </div>

            <p></p>

            <% @driverList.each do |driver| %>
                <%= render partial: 'drivers/driver_card', locals:{driver: driver} %>  
            <% end %>
            
          <% else %>
          		<div class="text-center">
			        <div >
				        <div id="notice" class="alert alert-info alert-dismissible fade show"> 
				        	No se encontraron conductores con esos datos
				        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
				        </div>
				    </div>
				</div>

				<div style="margin-left:30px; margin-top:15px;">
					<h1><i><b>Resultados de búsqueda:</b> <%= params[:q] %> </i></h1>
				</div>

				<div style="margin-left:30px; margin-top:15px; margin-bottom:15px;">
					<form class="form-inline my-2 my-lg-0" action="/drivers/search">
					    <input class="form-control mr-sm-2" name="q" type="text" placeholder="Email, nombre, apellido, DNI", aria-label="Buscar">
					    <button class="btn btn-info" type="submit"> Buscar </button>				   		 
					</form>
				</div>	

          <% end %>  
        </div>
      </p>

      
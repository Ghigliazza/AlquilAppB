<div id="<%= dom_id payment %>">

  <li class="list-group-item">
    <div>
      <h5><strong> Pago: </strong><%= payment.created_at.strftime('%Y-%m-%e A las %k:%M:%S') %> </h5>
      <p>
        <a class="btn btn-outline-success" style="width:100%" data-bs-toggle="collapse" href="#collapsePay_<%= payment.id %>" role="button" aria-expanded="false" aria-controls="collapsePay_<%= payment.id %>">
          Detalle
        </a>
      </p>

      <div class="collapse" id="collapsePay_<%= payment.id %>">
        <ul>
          <li class="row"><div class="col-auto fw-semibold"> Precio:     </div> <div class="col fw-light fst-italic text-end"> <%= payment.price %>                                          </div></li>
          <li class="row"><div class="col-auto fw-semibold"> Alquilado:  </div> <div class="col fw-light fst-italic text-end"> <%= payment.rent_hs %>hs                                      </div></li>
          <li class="row"><div class="col-auto fw-semibold"> Inicio:     </div> <div class="col fw-light fst-italic text-end"> <%= payment.created_at.strftime('%Y-%m-%e A las %k:%M:%S') %> </div></li>
          <li class="row"><div class="col-auto fw-semibold"> Expiracion: </div> <div class="col fw-light fst-italic text-end"> <%= payment.expires.strftime('%Y-%m-%e A las %k:%M:%S') %>    </div></li>
        </ul>
      </div>
    </div>
  </li>
</div>

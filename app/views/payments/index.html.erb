<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-center text-center">
  <div class="card" style="width:500px">
    <div class="card-header">
      <h1> Lista de Pagos </h1>
    </div>

    <div class="card-body">
      <ol class="list-group list-group-numbered">
        <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false" aria-controls= <%= @targets %> >
          Ver Todo
        </button><br>

        <div id="payments">
          <% @rental.payments.each do |payment| %>
            <%= render payment %>
          <% end %>
        </div>

      </ol>
    </div>

    <div class="card-footer">
      <h5><strong> Resumen de alquiler </strong></h5>
      <ul>
        <li class="row"><div class="col-auto fw-semibold"> Horas Totales:      </div> <div class="col fw-light fst-italic text-end">   <%= @rental.total_hours %>                      </div></li>
        <li class="row"><div class="col-auto fw-semibold"> Precio De Alquiler: </div> <div class="col fw-light fst-italic text-end"> $ <%= @rental.price %>                          </div></li>
        <li class="row"><div class="col-auto fw-semibold"> Precio De Multas:   </div> <div class="col fw-light fst-italic text-end"> $ <%= @multa %>                                 </div></li>
        <li class="row"><div class="col-auto fw-semibold"> Precio Total:       </div> <div class="col fw-light fst-italic text-end"> $ <%= @rental.price + @multa %>                 </div></li>

        <% if @rental.tenMinutesPassed? || @rental.turnedOn? %>
          <!--<li class="row"><div class="col-auto fw-semibold"> Saldo Devuelto:     </div> <div class="col fw-light fst-italic text-end">  $0 </div></li> -->
        <% else %>
          <li class="row"><div class="col-auto fw-semibold"> * Saldo devuelto por alquiler cancelado </div> </li>
        <% end %>
      </ul>
    </div>


    <%= link_to "Volver", rental_path(@rental), class: "btn btn-primary" %>
  </div>
</div>
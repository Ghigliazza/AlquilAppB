<div style="margin-left:30px; margin-top:15px;">

<%= form_with(model: car) do |form| %>
  <% if car.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :model, "Modelo", style: "display: block" %>
    <%= form.text_field :model %>
  </div>

  <div>
    <%= form.label :brand, "Marca", style: "display: block" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :license, "Licencia", style: "display: block" %>
    <%= form.text_field :license %>
  </div>

  <div>
    <%= form.label :color, "Color", style: "display: block" %>
    <%= form.text_field :color %>
  </div>

  <div>
    <%= form.label :image, "Imagen", style: "display: block" %>
    <%#= form.text_field :img_url %>
    <%= form.file_field :image %></p>

  </div>

  <div>
    <%= form.label :doors, "Puertas", style: "display: block" %>
    <%= form.number_field :doors %>
  </div>

  <div>
    <%= form.label :seats, "Asientos", style: "display: block" %>
    <%= form.number_field :seats %>
  </div>

  <div>
    <p><%= form.label :state, "Estado", style: "display: block" %>
    <%= form.radio_button :state, :blocked %> El auto está bloqueado. </p>
    <%= form.radio_button :state, :ready %> El auto está listo para ser alquilado. </p>
  </div>

  <div>
    <%= form.hidden_field :engine, :value => false %>
  </div>

  <div>
  <%= form.hidden_field :coords_x, :value => -57.942948097923505.to_f %>
  <%= form.hidden_field :coords_y, :value => -34.90961858045628.to_f %>
  </div>

  <!-------- MODAL PIE -------------------------->
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      <%= form.button "Guardar Auto" , type: "submit", :class=> "btn btn-primary" %>
    </div> 
<% end %>